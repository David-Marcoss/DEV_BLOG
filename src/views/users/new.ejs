<%- include('../partials/header')%>
<%- include('../partials/logo')%>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            
            <%- include('../partials/alert')%>

            <div class="card">
                <div class="card-header text-white text-center" id="form-title">
                    Crie sua conta
                </div>
                <div class="card-body">
                    <form method="POST" action="/users/create">
                        <div class="form-group">
                            <label for="nome">Nome</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Digite seu nome">
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Digite seu email">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect1">Tipo de Usuario</label>
                            
                            <select name="isAdmin" class="form-control" id="exampleFormControlSelect1">
                              <option value="<%= false%>" >Leitor</option>
                              <option value="<%= true%>" >Admistrador</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="senha">Senha</label>
                            <input type="password" class="form-control" id="password"name="password" placeholder="Digite sua senha">
                        </div>
                        <div class="form-group">
                            <label for="confirmarSenha">Confirmar Senha</label>
                            <input type="password" class="form-control" id="password2" name="password2" placeholder="Confirme sua senha">
                        </div>
                        <button type="submit" class="btn btn-block" id="form-button">Cadastre-se</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer')%>