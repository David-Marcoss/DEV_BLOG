<%- include('../../partials/header')%>
<%- include('../../partials/navbar')%>


<div class="container">
    <br>
    <%- include('../../partials/alert')%>
    <div class="card">
        <div class="card-header">
            <h2>Editar Artigo</h2>
        </div>

        <div class="card-body">
    
            <form method="POST" action="/admin/articles/update/<%= article.id %>">
                <div class="form-group">
                    <label for="titulo">Titulo</label>
                    <input type="text" name="title" class="form-control" id="titulo" value="<%= article.title %>">
                </div>
                
                <div class="form-group">
                    <label >Resumo</label>
                    <input type="text" name="resume" class="form-control" id="titulo" value="<%= article.resume %>">
                </div>
                
                <div class="form-group">
                    <label for="article">Texto</label>
                    <textarea name="body" cols="10" rows="4" maxlength="500" class="form-control" id="article">
                        <%= article.body %>
                    </textarea>
                </div>

                <div class="form-group">
                    <label for="category">Categoria</label>
                    <select name="categoryId" class="form-control" id="category">
                        <% categories.forEach(category => { %>
                            <% if (category.id === article.category.id){%>
                                <option selected value="<%= category.id %>"><%= category.name %></option>
                            <%}else{%>
                                <option value="<%= category.id %>"><%= category.name %></option>
                            <%}%>
                        <% }) %>
                    </select>
                
                </div>

                <button type="submit" class="btn btn-success">salvar</button>
            </form>

        </div>
    </div>
</div>

<%- include('../../partials/footer')%>

<%- include('../../partials/tinyMce')%>


