<%- include('../../partials/header')%>
<%- include('../../partials/navbar')%>


<div class="container">
    <br>
    <div class="card">
        <div class="card-header">
            <h2>Editar Artigo</h2>
        </div>

        <div class="card-body">

            <form method="POST" action="/admin/articles/save">
                <div class="form-group">
                    <label for="titulo">Titulo</label>
                    <input type="text" name="title" class="form-control" id="titulo" value="<%= article.title %>">
                </div>
                
                <div class="form-group">
                    <label for="article">Texto</label>
                    <textarea name="body" cols="10" rows="4" maxlength="500" class="form-control" id="article">
                        <%= article.body %>
                    </textarea>
                </div>

                <div class="form-group">
                    <label for="category">Categoria</label>
                    <select name="category" class="form-control" id="category">
                        <option value="<%= article.category.id %>"><%= article.category.name %></option>
                    </select>
                </div>

                <button type="submit" class="btn btn-success">salvar</button>
            </form>

        </div>
    </div>
</div>

<%- include('../../partials/footer')%>

