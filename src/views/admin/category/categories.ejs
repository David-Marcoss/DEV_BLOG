<%- include('../../partials/header')%>
<%- include('../../partials/navbar')%>


<div class="container">
    <br>
    <h2>Categorias</h2>
    <hr>
    <a  class="btn btn-success" href="/admin/categories/new">Cadastrar</a><br><br>
    <table class="table table-bordered">

        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Ações</th>
            </tr>
        </thead>
        
        <tbody>
            <% categories.forEach( category => { %>
            <tr>
                <th><%= category.id %></th>
                <th><%= category.name %></th>
                <th><%= category.slug%></th>
                <th>
                    <a  class="btn btn-primary" href="/admin/categories/update/<%= category.id %>">Editar</a>

                    <form method="POST" action="/admin/categories/delete/" class="form" style="display: inline;" onsubmit="confirmDelete(event,this)">
                        <input type="hidden" value="<%= category.id %>"  name="id">
                        <button type="submit" class="btn btn-danger">Excluir</button>
                    </form>
                </th>
            </tr>
            <% })%>
        </tbody>
        
        
    </table>


</div>

<%- include('../../partials/footer')%>

<script>
    function confirmDelete(event,form){
        
        console.log("karai")

        //evita que o formulario seja enviado
        event.preventDefault() 

        var dell = confirm("Deseja excluir a Categoria?")

        if(dell){
            form.submit()
        }
    }
</script>