<%- include ('partials/header')%>
<body>
    <%- include ('partials/navbarMenu')%>
    
    <div class="container" id="home-conteudo">
        <br>
        <div class="jumbotron jumbotron-fluid">
            <div class="container">
              <h1 class="display-4"><%= category.name %></h1>
            </div>
          </div>
        <br>
        
        <h2> Artigos</h2>
        <hr>
        <% if (articles.length > 0){%>
            <% articles.forEach( article => {%>
                <div class="card">
                    <div class="card-header">
                        <h3> <%=article.title%> </h3>
                    </div>

                    <div class="card-body">
                        <a href="/articles/<%= article.slug %>"><button class="btn btn-success"> Ler </button></a>
                    </div>
                </div>
                <br>
            <%})%>
        <%}else{%>
            <h3>Não há nenhum artigo cadastrado nessa cetegoria :(</h3>
        <%}%>
        
    </div>

    
</body>

<%- include ('partials/footer')%>